{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2015", "es2017"],
    "removeComments": true,
    "noStrictGenericChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./node_modules",
    "./tests",
    "./coverage"
  ]
}
